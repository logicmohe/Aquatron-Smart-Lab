#kivy 1.11.1


#Screen Manager: two pages in total
<ScreenManager>:
    MainScreen
    SettingScreen

#Main Screen Layout
<MainScreen>:
    name: 'Main'
    BoxLayout:
        orientation:"vertical"

        #Header
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .3
            Label:
                text: "Aquatron Smart Lab"
            Label:
                id: time_label
                text: "0000-00-00 00:00:00"
        
        #Top buttons
        BoxLayout:
            orientation: "horizontal"
            height: 10
            size_hint_y: .3
            spacing: 20
            Image:
                source: 'aquatron.png'
                size_hint: 1,1
            Button:
                text:"Setting Page"
                size_hint: .5,1
                on_release: root.manager.current='Setting'
            BoxLayout:
                orientation: "horizontal"
                size_hint: .9,1
                ToggleButton:
                    id: ON
                    on_press: root.on_button()
                    state:'down'
                    text: "ON"
                    group: "Status"
                ToggleButton:
                    id:OFF
                    on_press: root.off_button()
                    text: "OFF"
                    group: "Status"
                #Switch:

        #First Row Three sensors 
        BoxLayout:
            orientation: "horizontal"
            height: 10
            size_hint_y: .3
            spacing: 20
            Label:
                text:"Water Temperature Sensor"
                size_hint: .5,1
            Label:
                text:"Liquid Sensor"
                size_hint: .5,1
            Label:
                text:"Air Temperature Sensor"
                size_hint: .5,1
        #First Row Three sensors 
        BoxLayout:
            orientation: "horizontal"
            height: 10
            size_hint_y: .3
            spacing: 20
            Button:
                text:"Water Temperature Sensor"
                #size_hint: .5,1
            Button:
                text:"Liquid Sensor"
                #size_hint: .5,1
            Button:
                text:"Air Temperature Sensor"
                #size_hint: .5,1

        #Second Row Three sensors 
        BoxLayout:
            orientation: "horizontal"
            height: 10
            size_hint_y: .3
            spacing: 20
            Label:
                text:"Water Level Sensor"
                size_hint: .5,1
            Label:
                text:"Light Sensor"
                size_hint: .5,1
            Label:
                text:"Humanity Sensor"
                size_hint: .5,1

        #Second Row Three sensors 
        BoxLayout:
            orientation: "horizontal"
            height: 10
            size_hint_y: .3
            spacing: 20
            Button:
                text:"Water Level Sensor"
                #size_hint: 1,1
            Button:
                text:"Light Sensor"
                #size_hint: .5,1
            Button:
                text:"Humanity Sensor"
                #size_hint: .5,1
            
#Setting Screen Layout
<SettingScreen>:
    name: 'Setting'
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        #Header
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .2
            Label:
                text: "Aquatron Smart Lab"
            Label:
                id: time_label
                text: "0000-00-00 00:00:00"

        #First Row contains three sensors
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Water Temperature Sensor"
            Label:
                text: "Liquid Sensor"       
            Label:
                text: "Air Temperature Sensor"

        #First Row contains three sensors
        BoxLayout:
            orientation: "horizontal"
            Slider:
                id: watertemp_slider
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: liquid_slider
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: airtemp_slider
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"


        #Second Row contains three sensors
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Water Level Sensor"
            Label:
                text: "Light Sensor"
            Label:
                text: "Humanity Sensor"

        #Second Row contains three sensors
        BoxLayout:
            orientation: "horizontal"
            Slider:
                id: waterlvl_slider
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: light_slider
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: huamnity_slider
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
        
        #Button on bottom
        BoxLayout:
            orientation: "horizontal"
            Button:
                text:"Save Changes"
                #on_release:
                    #root.update.....
            Button:
                text: "Back"
                on_release: root.manager.current='Main'            
