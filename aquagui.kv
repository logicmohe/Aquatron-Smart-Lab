#kivy 1.11.1


#Screen Manager: two pages in total
<ScreenManager>:
    MainScreen
    SettingScreen
    WaterSensorScreen
    RoomSensorScreen
    OtherSensorScreen
    AlertingScreen

#Main Screen Layout
<MainScreen>:
    name: 'Main'
    BoxLayout:
        orientation:"vertical"

        spacing: 30
        #Header
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .15
            Label:
                text: "Aquatron Smart Lab"
            Label:
                id: time_label
                text: "0000-00-00 00:00:00"
        
        #Top buttons
        BoxLayout:
            orientation: "horizontal"
            height: 10
            size_hint_y: .3
            spacing: 5
            Image:
                source: 'aquatron.png'
                size_hint: .3,1
            Button:
                text:"Setting"
                size_hint: .5,1
                on_release: root.manager.current='Setting'
            Button:
                text:"Water Sensor"
                size_hint: .5,1
                on_release: root.manager.current='WaterSensor'  
            Button:
                text:"Room Sensor"
                size_hint: .5,1
                on_release: root.manager.current='RoomSensor'          
            Button:
                text:"Other Sensor"
                size_hint: .5,1
                on_release: root.manager.current='OtherSensor'
            Button:
                text:"Alerting"
                size_hint: .5,1
                on_release: root.manager.current='Alerting'


            BoxLayout:
                orientation: "horizontal"
                size_hint: .9,1
                ToggleButton:
                    id: ON
                    on_press: root.on_button()
                    state:'down'
                    text: "ON"
                    group: "Status"
                ToggleButton:
                    id:OFF
                    on_press: root.off_button()
                    text: "OFF"
                    group: "Status"
                #Switch:

        #First Row Three sensors 
        BoxLayout:#Name
            orientation: "horizontal"
            height: 5
            size_hint_y: .2
            spacing: 20
            Label:
                text:"Water Temperature Sensor"
                #size_hint: .5,1
            Label:
                text:"Liquid Sensor"
                #size_hint: .5,1
            Label:
                text:"Air Temperature Sensor"
                #size_hint: .5,1

        BoxLayout:#Value
            orientation: "horizontal"
            height: 10
            spacing: 20
            Button:
                id: watertemp
                text:"44F   |   46F"
                #size_hint: .5,1
            Button:
                id: waterleak
                text:"No Leak Detected"
                #size_hint: .5,1
            Button:
                id: roomtemp
                text:"53F"
                #size_hint: .5,1

        
        #Second Row Three sensors 
        BoxLayout:#Name
            orientation: "horizontal"
            height: 5
            size_hint_y: .2
            spacing: 20
            Label:
                text:"Water Level Sensor"
                #size_hint: .5,1
            Label:
                text:"Light Sensor"
                #size_hint: .5,1
            Label:
                text:"Humidity Sensor"
                #size_hint: .5,1

        BoxLayout:#Value
            orientation: "horizontal"
            height: 10
            spacing: 20
            Button:
                id: waterlvl
                text:"25%   |   25%"
                #size_hint: 1,1
            Button:
                id: light
                text:"36"
                #size_hint: .5,1
            Button:
                id: humidity
                text:"55%"
                #size_hint: .5,1

#Setting Screen Layout
<SettingScreen>:
    name: 'Setting'
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        #Header
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .2
            Label:
                text: "Aquatron Smart Lab Setting Page: Please drag the slider to desire values, then save change"


        #First Row contains three sensors
        BoxLayout:#Name
            orientation: "horizontal"
            size_hint_y: .8
            Label:
                text: "Water Temperature Sensor"
            Label:
                text: "Liquid Sensor"       
            Label:
                text: "Air Temperature Sensor"
        BoxLayout:#Max and Min value
            orientation: "horizontal"
            size_hint_y: .2
            Label:
                text: "Min"
            Label:
                text: str(watertemp_slider_min.value)
            Label:
                text: "Max"                
            Label:
                text: str(watertemp_slider_max.value)

            Label:
                text: "Min"
            Label:
                text: str(liquid_slider_min.value)
            Label:
                text: "Max"
            Label:
                text: str(liquid_slider_max.value)  

            Label:
                text: "Min"  
            Label:
                text: str(airtemp_slider_min.value)                
            Label:
                text: "Max"
            Label:
                text: str(airtemp_slider_max.value)
            

        #First Row Sliders
        BoxLayout:#Min
            orientation: "horizontal"
            Slider:
                id: watertemp_slider_min
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: liquid_slider_min
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: airtemp_slider_min
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
        BoxLayout:#Max
            orientation: "horizontal"
            Slider:
                id: watertemp_slider_max
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: liquid_slider_max
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: airtemp_slider_max
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"


        #Second Row contains three sensors
        BoxLayout:#Name
            orientation: "horizontal"
            size_hint_y: .8
            Label:
                text: "Water Level Sensor"
            Label:
                text: "Light Sensor"
            Label:
                text: "Humidity Sensor"
        BoxLayout:#Max and Min value
            orientation: "horizontal"
            size_hint_y: .2
            Label:
                text: "Min"  
            Label:
                text: str(waterlvl_slider_min.value)
            Label:
                text: "Max"
            Label:
                text: str(waterlvl_slider_max.value)

            Label:
                text: "Min"
            Label:
                text: str(light_slider_min.value)
            Label:
                text: "Max"                
            Label:
                text: str(light_slider_max.value)

            Label:
                text: "Min"
            Label:
                text: str(humidity_slider_min.value)
            Label:
                text: "Max"
            Label:
                text: str(humidity_slider_max.value)  


        BoxLayout:#Min
            orientation: "horizontal"
            Slider:
                id: waterlvl_slider_min
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: light_slider_min
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: humidity_slider_min
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
        #Second Row Sliders
        BoxLayout:#Max
            orientation: "horizontal"
            Slider:
                id: waterlvl_slider_max
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: light_slider_max
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"
            Slider:
                id: humidity_slider_max
                min: 0
                max: 100
                step: 1
                orientation: "horizontal"

        #Button on bottom
        BoxLayout:
            orientation: "horizontal"
            Button:
                text:"Save Changes"
                #on_release:
                    #root.update.....
            Button:
                text: "Back"
                on_release: root.manager.current='Main'            



