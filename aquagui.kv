#kivy 1.11.1


#Screen Manager: two pages in total
<ScreenManager>:
    MainScreen
    SettingScreen

#Main Screen Layout
<MainScreen>:
    name: 'Main'
    BoxLayout:
        orientation:"vertical"

        #Header
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .1
            Label:
                text: "Aquatron Smart Lab"
            Label:
                id: time_label
                text: "0000-00-00 00:00:00"
        
        #Top buttons
        BoxLayout:
            orientation: "horizontal"
            height: 10
            size_hint_y: .3
            spacing: 20
            Image:
                source: 'aquatron.png'
                size_hint: 0.5,1
            Button:
                text:"Seting"
                size_hint: .5,1
                on_release: root.manager.current='Setting'
            BoxLayout:
                orientation: "horizontal"
                size_hint: .9,1
                ToggleButton:
                    id: ON
                    on_press: root.on_button()
                    state:'down'
                    text: "ON"
                    group: "Status"
                ToggleButton:
                    id:OFF
                    on_press: root.off_button()
                    text: "OFF"
                    group: "Status"
                #Switch:

        #First Row Three sensors 
        BoxLayout:
            orientation: "horizontal"
            height: 10
            size_hint_y: .3
            spacing: 20
            Label:
                text:"Water Temperature Sensor"
                size_hint: .5,1
            Label:
                text:"Liquid Sensor"
                size_hint: .5,1
            Label:
                text:"Air Temperature Sensor"
                size_hint: .5,1

        #Second Row Three sensors 
        BoxLayout:
            orientation: "horizontal"
            height: 10
            size_hint_y: .3
            spacing: 20
            Label:
                text:"Water Level Sensor"
                size_hint: .5,1
            Label:
                text:"Light Sensor"
                size_hint: .5,1
            Label:
                text:"Humanity Sensor"
                size_hint: .5,1
                
#Setting Screen Layout
<SettingScreen>:
    name: 'Setting'
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        #First Row contains three sensors
        BoxLayout:
            orientation: "horizontal"

            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Water Temperature Sensor"
                Slider:
                    id: watertemp_slider
                    min: 0
                    max: 100
                    step: 1
                    orientation: "horizontal"
                TextInput:
                    id: watertemp
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Liquid Sensor"
                Slider:
                    id: liquid_slider
                    min: 0
                    max: 100
                    step: 1
                    orientation: "horizontal"
                TextInput:
                    id: liquid  
            BoxLayout:
                orientation: "horizontal"          
                Label:
                    text: "Air Temperature Sensor"
                Slider:
                    id: airtemp_slider
                    min: 0
                    max: 100
                    step: 1
                    orientation: "horizontal"
                TextInput:
                    id: airtemp                
        #Second Row contains three sensors
        BoxLayout:
            orientation: "horizontal"
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Water Level Sensor"
                Slider:
                    id: waterlvl_slider
                    min: 0
                    max: 100
                    step: 1
                    orientation: "horizontal"
                TextInput:
                    id: waterlvl
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "Light Sensor"
                Slider:
                    id: light_slider
                    min: 0
                    max: 100
                    step: 1
                    orientation: "horizontal"
                TextInput:
                    id: light      
            BoxLayout:
                orientation: "horizontal"      
                Label:
                    text: "Humanity Sensor"
                Slider:
                    id: huamnity_slider
                    min: 0
                    max: 100
                    step: 1
                    orientation: "horizontal"
                TextInput:
                    id: humanity                